@using WordCounter.Models;

<!DOCTYPE html>
<html>
<head>
  <meta charset='utf-8'>
  <title>Word Counter</title>
</head>
<body>
  <div class="container">
    <div class="jumbotron">
      <h1>Word Counter</h1>
    </div>
    <div>
      @if (@Model == null)
      {
        <p> something went wrong! </p>
      }
      @if (@Model != null)
      {
        <p>The word @Model.GetWord() appears @Model.GetPairs() times in the sentence:</p>
        <br>
      }

      <p>@Model.GetSentence()</p>
      <br>
      <a href="/wordcounter/new">Try again</a>
      <a href='/'>Back to home</a>
    </div>
  </div>
</body>
</html>
